@model CommantBook
<form method="post">
    <input hidden asp-for="Book_ID" />
        <div class="card  container ">
            <div class="card-header bg-primary text-light ml-0  row ">
                <div class="col-12 col-md-6">
                    <h1 class="text-white">@Model.Book.Name</h1>
                </div>
                <div class="col-12 col-md-6 text-end pb-4">
                    <span class="badge bg-warning pt-2" style="height:30px;">@Model.Book.Category.Name</span>
                </div>
            </div>
            <div class="card-body row container">
                <div class="container rounded pb-2">
                    <div class="row">
                        <div class="col-12 col-lg-3 text-center" style="border-right:1px solid #0066cc; ">
                            <img src="@Model.Book.Picture" width="100%" class="rounded" />
                        </div>

                        <div class="col-8 col-lg-8 offset-lg-1 ">

                            <div class="row pl-2">
                                <div class="col-2"><h5 > <span class="text-primary">Yazar </span></h5></div>
                               <div class="col-10"><h5 class="pb-2 ">:  @Model.Book.Writer</h5></div>
                            </div>
                            <div class="row pl-2">
                                                    
                            </div>                          
                             <div class="row pl-2">
                                <div class="col-2"><h5 class="pb-2 "><span class="text-primary">Eleştiri</span></h5></div>
                                <div class="col-10"><h5 class="pb-2 ">: @Model.Book.Detail</h5></div>                              
                            </div>   
                            <div class="row pt-4 pl-2">
                                
                            </div>
                        </div>                        
                    </div>
                </div>
            </div>
            <div class="card-footer bg-white">
                <div class="row">
                    <div class="col-12 col-md-6 pb-1">
                        <a class="btn btn-success form-control " style="height:50px;" asp-action="Index">Ana Sayfaya Dön</a>
                    </div>


                    
                    <div class="col-12 col-md-6 pb-1">


                         <td> 
                    </td>

                    </div>
                </div>
            </div>
        </div>
</form>


