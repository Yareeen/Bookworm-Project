@*
    @işaretiyle Modelimii belirtiriz
*@
@model IEnumerable<Category>

<div class ="container">
    
    <div class ="row">
         <div class ="col-6">
             <h2> Kategori Listesi</h2>
        </div>
        <div class ="col-6">
         @*
        tag helper oluşturulur. *@
        <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
            <span> Yeni Kategori Ekle</span>
             </a>
        </div>
    </div>

    <div class ="row">
    

        <table class="tabe table-bordered table-striped my-2" >
            <thead>
                <tr>
                    <th>
                        Kategori Adı
                    </th>

                    <th>
                       
                    </th>
                </tr>
            </thead>


            <tbody>

                @foreach(var category in Model){
                <tr>
                    <td> @category.Name  </td>
                    <td> 
                        <a asp-controller="Category" asp-action="Edit" asp-route-id="@category.ID" class="btn btn-primary"> Güncelle</a>
                         <a asp-controller="Category" asp-action="Delete" asp-route-id="@category.ID" class="btn btn-danger"> Sil</a>
                    </td>
                
                </tr>
                
                }
              

            </tbody>
        </table>
    </div>
</div
